<header class="panel-cover">
  <div class="panel-main">

    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        {{#if @blog.logo}}
        <a href="{{@blog.url}}/#open" title="link to homepage for {{@blog.title}}"><img src="{{@blog.logo}}" width="80" alt="{{@blog.title}} logo" class="panel-cover__logo logo" /></a>
        {{/if}}
        <h1 class="panel-cover__title panel-title"><a href="{{@blog.url}}" title="link to homepage for {{@blog.title}}">Let's Ongair</a></h1>
        {{!-- <span class="panel-cover__subtitle panel-subtitle">Human yet</span> --}}
        <hr class="panel-cover__divider" />
        <p class="panel-cover__description">{{@blog.description}}</p>

        <hr class="panel-cover__divider panel-cover__divider--secondary" />

        <div class="navigation-wrapper">

          <form id="search">
            <i class="icon icon-search"></i>
            <input type="text", name="search", placeholder="WhatsApp, Wechat..." id="search-field" />
            <hr class="panel-cover__divider panel-cover__divider--secondary" />
          </form>

          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">
              <li class="navigation__item"><a href="http://app.ongair.im/" target="_blank" title="Sign up today" class="blog-button">Sign up Today</a></li>
              <li class="navigation__item"><a href="/#open" title="Let's Ongair" class="blog-button">Blog</a></li>
              {{!-- <li class="navigation__item"><a href="/#open" title="link to {{@blog.title}} blog" class="blog-button">Blog</a></li> --}}
            </ul>
          </nav>

          {{> social}}

        </div>

      </div>

    </div>
  </div>
</header>
